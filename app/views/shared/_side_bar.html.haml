.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__namebar
        = current_user.name
      %ul.side-header__box__icon
        %li
          = link_to new_group_path do
            = icon('fa', 'edit',class: 'side-header__box__icon__icon1')
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog',class: 'side-header__box__icon__icon2')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group)  do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
